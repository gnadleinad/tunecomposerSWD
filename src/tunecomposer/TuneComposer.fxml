<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="1280.0" maxWidth="2000.0" prefHeight="388.0" prefWidth="647.0" stylesheets="@tunecomposer.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tunecomposer.EventHandle">
   <children>
      <MenuBar maxWidth="2000.0" prefHeight="32.0" prefWidth="600.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleExitMenuItemAction" text="Exit">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="Q" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleSelectAllButtonAction" text="Select All">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="A" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
                  <MenuItem mnemonicParsing="false" onAction="#handleDeleteButtonAction" text="Delete" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" onAction="#handleGroupButtonAction" text="Group">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="G" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                     </accelerator>
                  </MenuItem>
                  <MenuItem mnemonicParsing="false" onAction="#handleUngroupButtonAction" text="Ungroup">
                     <accelerator>
                        <KeyCodeCombination alt="UP" code="U" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                     </accelerator>
                  </MenuItem>
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Action">
            <items>

              <MenuItem mnemonicParsing="false" onAction="#handlePlayScaleButtonAction" text="Start Playing">

                     <accelerator>
                        <KeyCodeCombination alt="UP" code="P" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>

                  <MenuItem mnemonicParsing="false" onAction="#handleStopPlayingButtonAction" text="Stop Playing">

                     <accelerator>
                        <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <SplitPane dividerPositions="0.25" maxHeight="1280.0" maxWidth="2000.0" prefHeight="1280.0" prefWidth="647.0">
        <items>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0" SplitPane.resizableWithParent="false">
               <children>

                  <RadioButton fx:id="pianoButton" layoutX="19.0" layoutY="20.0" mnemonicParsing="false" selected="true" styleClass="Piano" text="Piano">

                     <toggleGroup>
                        <ToggleGroup fx:id="instrument" />
                     </toggleGroup>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </RadioButton>
                  <RadioButton fx:id="harpsichordButton" layoutX="19.0" layoutY="60.0" mnemonicParsing="false" styleClass="Harpsichord" text="Harpsichord" toggleGroup="$instrument">
                     <font>
                        <Font size="14.0" />
                     </font></RadioButton>
                  <RadioButton fx:id="marimbaButton" layoutX="19.0" layoutY="100.0" mnemonicParsing="false" styleClass="Marimba" text="Marimba" toggleGroup="$instrument">
                     <font>
                        <Font size="14.0" />
                     </font></RadioButton>
                  <RadioButton fx:id="organButton" layoutX="19.0" layoutY="140.0" mnemonicParsing="false" styleClass="Church-Organ" text="Church Organ" toggleGroup="$instrument">
                     <font>
                        <Font size="14.0" />
                     </font></RadioButton>
                  <RadioButton fx:id="accordionButton" layoutX="19.0" layoutY="180.0" mnemonicParsing="false" styleClass="Accordion" text="Accordion" toggleGroup="$instrument">
                     <font>
                        <Font size="14.0" />
                     </font></RadioButton>
                  <RadioButton fx:id="guitarButton" layoutX="19.0" layoutY="220.0" mnemonicParsing="false" styleClass="Guitar" text="Guitar" toggleGroup="$instrument">

                     <font>
                        <Font size="14.0" />
                     </font>
                  </RadioButton>

                  <RadioButton fx:id="violinButton" layoutX="19.0" layoutY="260.0" mnemonicParsing="false" styleClass="Violin" text="Violin" toggleGroup="$instrument">

                     <font>
                        <Font size="14.0" />
                     </font>
                  </RadioButton>
                  <RadioButton fx:id="frenchhornButton" layoutX="19.0" layoutY="300.0" mnemonicParsing="false" styleClass="French-Horn" text="French Horn" toggleGroup="$instrument">

                     <font>
                        <Font size="14.0" />
                     </font>
                  </RadioButton>
               </children>
          </AnchorPane>
            <ScrollPane prefHeight="200.0" prefWidth="200.0">
              <content>
                  <StackPane>
                     <children>
                        <AnchorPane fx:id="redline_pane" layoutX="10.0" layoutY="10.0" minHeight="0.0" minWidth="0.0" prefHeight="1280.0" prefWidth="2000.0">
                           <children>
                              <Line fx:id="red_line" endX="-101.0" endY="1208.0" layoutX="101.0" layoutY="72.0" startX="-101.0" startY="-72.0" stroke="RED" />
                           </children>
                        </AnchorPane>
                        <AnchorPane fx:id="lines_pane" layoutX="10.0" layoutY="10.0" minHeight="0.0" minWidth="0.0" prefHeight="1280.0" prefWidth="2000.0" />
                        <AnchorPane fx:id="notes_pane" layoutX="10.0" layoutY="10.0" minHeight="0.0" minWidth="0.0" onMouseClicked="#onClick" onMouseDragged="#onDragged" onMousePressed="#onPressed" onMouseReleased="#onReleased" prefHeight="1280.0" prefWidth="2000.0" />
                     </children>
                  </StackPane>
              </content>
            </ScrollPane>
        </items>
      </SplitPane>
   </children>
</VBox>
